{% extends "admin/base.html.twig" %}
{% block title %}Administration comptes{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('CSS/admin/articles.css') }}">
{% endblock %}
{% block body %}
	<div class="container-fluid">
	<div class="row d-flex justify-content-center ">
		<div class="col-sm-4 col-5 col-md-5 col-lg-auto">
			<div class="row">
				<div class="col-sm-4 col-4 col-md-2 col-lg-2">
					<img src="{{ asset('images/admin/comptes.png') }}" alt="Bootstrap" class="img-fluid img-responsive logo">
				</div>
				<div class="col-sm-4 col-4 col-md-10 col-lg-10">
					<h1>Administration comptes</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="offset-md-1 offset-lg-1 col-md-10 col-lg-10 d-flex justify-content-between username">
			<div class="col-md-4 col-lg-4 d-flex align-items-center">
				<p>Bonjour, <span class="font-weight-bold">{{ app.user.firstname }} {{ app.user.lastname }}</span></p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="offset-md-3 offset-lg-3 col-md-6 col-lg-6 container_own_article">
			<h3 class="text-center">Liste des comptes</h3>
			<div class="row">
				<div class="offset-md-1 offset-lg-1 col-md-10 col-lg-10">
                    {% for compte in comptes %}
                       {{ form_start(form) }}
                        {{ form_row(form.login) }}
                        {{ form_end(form) }}
                    {% endfor %}
				</div>
			</div>
		</div>
	</div>

{% endblock %}