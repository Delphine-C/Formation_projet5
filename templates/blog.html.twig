{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('CSS/blog.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid page-content">
        <header>
            <div class="row justify-content-around margin-auto">
                <div class="col-xs-12 col-lg-5 justify-content-around">
                    <div class="row col-xs-6">
                        <img src="{{ asset('images/logoH1/blog.svg') }}" class="h1">
                        <h1>Blog</h1>
                    </div>
                    <div class="row col-xs-6">
                        <h2>Un peu de lecture pour tout comprendre du digital !</h2>
                    </div>
                    <div class="row">
                        <p class="envaleur">Retrouvez tous nos conseils et astuces pour devenir un pro du digital ! Actualités, checklists, ebook… Tout y est pour assouvir votre soif de connaissances !</p>
                    </div>
                </div>
                <div class="col-lg-5 d-none d-lg-block">
                    <img src="{{ asset('images/blog.jpg') }}" class="img-fluid img-round">
                </div>
            </div>
        </header>

        <div class="row block">
            <div class="row d-flex justify-content-around">
                {% for article in articles %}
                    <div class="col-lg-5 col-md-5 col-sm-7 col-10 no-padding shadow-sm p-0 mb-0 bg-white rounded white block-decal thumbnail">
                        <img src="{{ asset(article.image) }}" class="img-fluid" alt="" height="180"
                             width="100%">
                        <div class="col-12 text-right">
                            <h7 class="font-weight-bold">{{ article.category }}</h7>
                        </div>

                        <h5>Ecrit par {{ article.author.firstname }} le {{ article.date|date('d.m.Y') }}</h5>
                        <h6>{{ article.title }}</h6>
                        <p>Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum </p>
                        <a href="{{ path('article_page', {'id': article.id}) }}" class="link1">Lire l'article</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}