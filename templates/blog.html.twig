{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('CSS/blog.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid  page-content">
        <header>
            <div class="row justify-content-around margin-auto">
                <div class="col-xs-12 col-lg-5 justify-content-around">
                    <div class="row col-xs-6">
                        <img src="{{ asset('images/logoH1/blog.svg') }}" class="h1">
                        <h1>Blog</h1>
                    </div>
                    <div class="row col-xs-6">
                        <h2>A Subtitle</h2>
                    </div>
                    <div class="row">
                        <p class="envaleur">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi commodo felis
                            turpis, sit amet rhoncus augue fringilla aliquam. Duis eleifend massa non quam molestie
                            dictum.</p>
                    </div>
                </div>
                <div class="col-lg-5 d-none d-lg-block">
                    <img src="{{ asset('images/home-intro.jpg') }}" class="img-fluid ">
                </div>
            </div>
        </header>

        <div class="row block">
            <div class="row d-flex justify-content-around display-small">
                {% for article in articles %}
                    <div class="col-lg-4 no-padding shadow-sm p-0 mb-0 bg-white rounded white block-decal thumbnail">
                        <img src="{{ asset('images/home/projet1.jpg') }}" class="img-fluid" alt="" height="180"
                             width="100%">
                        <h5>Ecrit par {{ article.author.firstname }} le {{ article.date|date('d.m.Y') }}</h5>
                        <h6>{{ article.title }}</h6>
                        <p>Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum </p>
                        <a href="{{ path('article_page', {'id': article.id}) }}" class="link1">Lire l'article</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}